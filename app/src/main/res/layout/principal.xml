<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp" android:background="@color/colorPrimary">

        <TextView
            android:text="Hoje, 4 de Setembro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="15dp"
            android:id="@+id/textViewPeriodoHoje"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />

        <TextView
            android:text="26°"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewPeriodoHoje"
            android:layout_alignLeft="@+id/textViewPeriodoHoje"
            android:layout_alignStart="@+id/textViewPeriodoHoje"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="9dp"
            android:id="@+id/textViewTempHoje"
            android:textSize="40sp"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold" />

        <TextView
            android:text="Vitória, ES"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTempHoje"
            android:layout_alignLeft="@+id/textViewPeriodoHoje"
            android:layout_alignStart="@+id/textViewPeriodoHoje"
            android:id="@+id/textViewCidade"
            android:textColor="@android:color/background_light"
            android:textSize="35sp" />

        <ImageView
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_marginRight="54dp"
            android:layout_marginEnd="54dp"
            android:id="@+id/imageViewIconeHoje"
            android:layout_below="@+id/textViewPeriodoHoje"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="80dp"
            android:layout_height="80dp" />
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/previsoesListView" />
</LinearLayout>
